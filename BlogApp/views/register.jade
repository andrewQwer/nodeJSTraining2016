extends layout

block content
    h1 Register page

    form(action="/register",method="POST")
        div.form-group
            label(for="login") Login
            input(type="text",placeholder="Login",name="login").form-control#login
        div.form-group
            label(for="Email") Email
            input(type="text",placeholder="Email",name="email").form-control#Email
        div.form-group
            label(for="password") Password
            input(type="password",placeholder="Password",name="password").form-control#password
        div.form-group
            label(for="rpassword") Repeat password
            input(type="rpassword",placeholder="Password",name="repeatPassword").form-control#rpassword
        button(type="submit").btn.btn-default Submit
